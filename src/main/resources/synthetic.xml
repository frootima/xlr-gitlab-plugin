<synthetic xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd" xmlns="http://www.xebialabs.com/deployit/synthetic" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

   <type type="gitlab.Server" extends="configuration.HttpConnection">
       <property name="APIKey" required="false" label="API Key" password="true" />
   </type>

   <type type="gitlab.CreateMergeRequest" extends="xlrelease.PythonScript">
       <property name="gitLabServer" category="input" label="Server" referenced-type="gitlab.Server" kind="ci" />
       <property name="project_id" category="input"/>
       <property name="source_branch" category="input"/>
       <property name="target_branch" category="input"/>
       <property name="title" category="input"/>
       <property name="APIKey" category="input" required="false" label="API Key" />

       <property name="mergeId" category="output" label="Merge ID" />
   </type>

   <type type="gitlab.AcceptMergeRequest" extends="xlrelease.PythonScript">
       <property name="gitLabServer" category="input" label="Server" referenced-type="gitlab.Server" kind="ci" />
       <property name="project_id" category="input"/>
       <property name="mergeId" category="input" />
       <property name="APIKey" category="input" required="false" label="API Key" />
   </type>

</synthetic>
